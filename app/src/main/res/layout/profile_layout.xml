<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="10dp">

        <ImageView
            android:id="@+id/image"
            android:layout_width="100dp"
            android:layout_height="101dp"
            android:src="@mipmap/noprofile" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimary"
            android:orientation="vertical">

            <TextView
                android:id="@+id/username"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:padding="10dp"
                android:text="aaaa"
                android:textSize="22sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:text="aaaa"
                android:padding="10dp"
                android:textSize="22sp"
                android:textStyle="bold"/>
        </LinearLayout>

    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawableLeft="@drawable/ic_liked"
        android:text="  Saved"
        android:padding="15dp"
        android:textColor="@color/colorBlack"
        android:textSize="20dp"></TextView>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawableLeft="@drawable/ic_monetization_on_black_24dp"
        android:text="  Finances"
        android:padding="15dp"
        android:textColor="@color/colorBlack"
        android:textSize="20dp"></TextView>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawableLeft="@drawable/ic_chat_black_24dp"
        android:text="  Live Support"
        android:padding="15dp"
        android:textColor="@color/colorBlack"
        android:textSize="20dp"></TextView>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawableLeft="@drawable/ic_delete_forever_black_24dp"
        android:text="  Delete Account"
        android:padding="15dp"
        android:textColor="@color/colorBlack"
        android:textSize="20dp"></TextView>
    <TextView
        android:id="@+id/signout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawableLeft="@drawable/ic_power_settings_new_black_24dp"
        android:text="  Sign Out"
        android:padding="15dp"
        android:textColor="@color/colorBlack"
        android:textSize="20dp"></TextView>
</LinearLayout>
